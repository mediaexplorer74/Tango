<UserControl x:Class="Tango.Toolbox.HighlightTextBlock"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
  d:DesignHeight="30" d:DesignWidth="120">
    
  <Grid x:Name="LayoutRoot">
    <TextBlock Name="innerText" HorizontalAlignment="Left">
      <!--Notice: the three runs must be kept in the same lines,
                  otherwise, there will be space between them.-->
      <TextBlock.Inlines>
        <Run x:Name="textBeforeMatched" Text="" /><Run x:Name="textMatched" Text="" /><Run x:Name="textAfterMatched" Text="" />
      </TextBlock.Inlines>
    </TextBlock>
  </Grid>
</UserControl>
