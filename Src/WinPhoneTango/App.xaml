<Application 
  x:Class="WinPhoneTango.App"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:app="clr-namespace:WinPhoneTango"
  xmlns:toolbox="clr-namespace:Tango.Toolbox;assembly=Tango.Toolbox"
  xmlns:data ="clr-namespace:WinPhoneTango.Data">

  <!--Application Resources-->
  <Application.Resources>
    <local:LocalizedStrings xmlns:local ="clr-namespace:WinPhoneTango"
                            x:Key="LocalizedStrings" />
    <local:InviteListHeader xmlns:local ="clr-namespace:WinPhoneTango"
                            x:Key="InviteListsHeader" />
    <Color x:Key="TangoOrangeColor">#FFFF461E</Color>
    <Color x:Key="TangoForegroundColor">White</Color>
    <Color x:Key="TangoBackgroundColor">Black</Color>
    <Color x:Key="TangoChromeColor">#FF1F1F1F</Color>
    <Color x:Key="TangoDisabledColor">#66FFFFFF</Color>
    <FontFamily x:Key="TangoFontFamilyNormal">Segoe UI</FontFamily>
    <SolidColorBrush Color="{StaticResource TangoOrangeColor}" x:Key="TangoOrangeBrush" />
    <!-- same chrome color as system default chrome color in dark theme -->
    <SolidColorBrush Color="{StaticResource TangoChromeColor}" x:Key="TangoChromeBrush"/>
    <!-- same disabled color as system default chrome color in dark theme -->
    <SolidColorBrush Color="{StaticResource TangoDisabledColor}" x:Key="TangoDisabledBrush"/>
    <!--Default: {StaticResource PhoneForegroundBrush}"-->
    <SolidColorBrush Color="{StaticResource TangoForegroundColor}" x:Key="TangoForeground" />
    <SolidColorBrush Color="{StaticResource TangoBackgroundColor}" x:Key="TangoBackground" />
    <x:Boolean x:Key="TangoSystemTrayIsVisible">False</x:Boolean>
    <x:Double x:Key="TangoTitleFont">22</x:Double>
    <!--Set the default colors for all the controls in order to force the application to use black theme-->
    <Style TargetType="Grid">
      <Setter Property="Background" Value="{StaticResource TangoBackground}" />
    </Style>
    <Style TargetType="TextBlock">
      <Setter Property="Foreground" Value="{StaticResource TangoForeground}" />
      <Setter Property="FontFamily" Value="Segoe UI Light" />
    </Style>
    <Style TargetType="ListBox">
      <Setter Property="Foreground" Value="{StaticResource TangoForeground}" />
    </Style>
    <Style TargetType="Button">
      <Setter Property="Foreground" Value="{StaticResource TangoForeground}" />
      <Setter Property="Background" Value="{StaticResource TangoBackground}" />
      <Setter Property="BorderBrush" Value="{StaticResource TangoForeground}" />
    </Style>
    <Style TargetType="CheckBox">
      <Setter Property="BorderBrush" Value="{StaticResource TangoForeground}" />
      <Setter Property="Background" Value="Gray" />
    </Style>
    <Style TargetType="ProgressBar">
      <Setter Property="Foreground" Value="{StaticResource TangoOrangeBrush}" />
    </Style>
    <Style TargetType="ToggleSwitch">
      <Setter Property="Foreground" Value="{StaticResource TangoForeground}" />
    </Style>

    <Style x:Key="TangoTitleStyle" TargetType="TextBlock">
      <Setter Property="Foreground" Value="{StaticResource TangoForeground}" />
      <Setter Property="Margin" Value="24,7,0,0" />
      <Setter Property="FontWeight" Value="SemiBold" />
      <Setter Property="FontSize" Value="24" />
    </Style>
    <Style x:Key="TangoTextBlockStyle" TargetType="TextBlock">
      <Setter Property="HorizontalAlignment" Value="Left"/>
      <Setter Property="VerticalAlignment" Value="Top"/>
      <Setter Property="FontSize" Value="20"/>
      <Setter Property="Foreground" Value="{StaticResource TangoForeground}" />
    </Style>
    
    <data:GroupBackgroundBrushColorConverter x:Key="groudBackground"/>
    <data:GroupForegroundBrushColorConverter x:Key="groudForeground"/>
    
    <DataTemplate x:Key="listGroupHeader">
      <Border Background="Transparent" Margin="0,8,0,8"
              Visibility="{Binding Visibility}">
        <Border Background="{StaticResource TangoOrangeBrush}" Height="62" Width="62"
                HorizontalAlignment="Left" Padding="8,0,0,0">
          <TextBlock Text="{Binding Key}" HorizontalAlignment="Left"
                     Foreground="{StaticResource TangoForeground}"
                     FontFamily="Segoe UI Light"
                     FontSize="48" VerticalAlignment="Bottom"/>
        </Border>
      </Border>
    </DataTemplate>

    <DataTemplate x:Key="listGroupItem">
      <Border Background="{Binding Converter={StaticResource groudBackground}}"
              Height="99" Width="99" Margin="6"
              HorizontalAlignment="Left" Visibility="{Binding Visibility}"
              IsHitTestVisible ="{Binding HasItem}" >
          <TextBlock Text="{Binding Key}" HorizontalAlignment="Left" Margin="8,0,0,0"
                      Foreground="{Binding Converter={StaticResource groudForeground}}"
                      FontFamily="Segoe UI Semibold"
                      FontSize="48"
                      VerticalAlignment="Bottom"/>
      </Border>
    </DataTemplate>

    <Style x:Key="TangoAccentColorItemStyle" TargetType="ListBoxItem">
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="ListBoxItem">
            <Border x:Name="LayoutRoot" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" HorizontalAlignment="{TemplateBinding HorizontalAlignment}" VerticalAlignment="{TemplateBinding VerticalAlignment}">
              <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="SelectionStates">
                  <VisualState x:Name="Unselected"/>
                  <VisualState x:Name="Selected">
                    <Storyboard>
                      <ColorAnimation Duration="0" To="{StaticResource TangoOrangeColor}" Storyboard.TargetProperty="(Control.Foreground).(SolidColorBrush.Color)" Storyboard.TargetName="ContentContainer"/>
                    </Storyboard>
                  </VisualState>
                </VisualStateGroup>
              </VisualStateManager.VisualStateGroups>
              <ContentControl x:Name="ContentContainer" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}">
                <ContentControl.Foreground>
                  <SolidColorBrush Color="{StaticResource TangoForegroundColor}"/>
                </ContentControl.Foreground>
              </ContentControl>
            </Border>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>
  </Application.Resources>

</Application>