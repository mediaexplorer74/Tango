<app:TangoEventPageBase 
  x:Class="WinPhoneTango.RegisterPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:app="clr-namespace:WinPhoneTango"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  FontFamily="{StaticResource TangoFontFamilyNormal}"
  Foreground="{StaticResource TangoForeground}"
  SupportedOrientations="Portrait" Orientation="Portrait"
  mc:Ignorable="d" d:DesignHeight="800" d:DesignWidth="480">

  <app:TangoEventPageBase.Resources>
    <Style x:Key="PageTextBoxStyle" TargetType="TextBox">
      <Setter Property="HorizontalAlignment" Value="Left"/>
      <Setter Property="VerticalAlignment" Value="Top"/>
      <Setter Property="Width" Value="456"/>
      <Setter Property="Margin" Value="-12,0,0,0"/>
      <Setter Property="FontSize" Value="24"/>
      <Setter Property="Foreground" Value="{StaticResource TangoBackground}" />
      <Setter Property="Background" Value="#FFBFBFBF" />
    </Style>
  </app:TangoEventPageBase.Resources>

  <!--LayoutRoot is the root grid where all page content is placed-->
  <Grid x:Name="LayoutRoot">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!--TitlePanel contains the name of the application and page title-->
    <StackPanel x:Name="TitlePanel" Grid.Row="0" Margin="0,0,0,36">
      <StackPanel Orientation="Horizontal">
        <Image Source="ms-appx:///WinPhoneTango/Resources/logo_small.png" HorizontalAlignment="Left" VerticalAlignment="Top" Stretch="None"></Image>
        <Rectangle Width="480" Fill="{StaticResource TangoOrangeBrush}" HorizontalAlignment="Left" VerticalAlignment="Stretch"></Rectangle>
      </StackPanel>
      <TextBlock Text="{Binding Localizedresources.register_title, Source={StaticResource LocalizedStrings}}"
                 x:Name="PageTitle" Style="{StaticResource TangoTitleStyle}"
                 HorizontalAlignment="Left" VerticalAlignment="Top" />
    </StackPanel>

    <!--ContentPanel - the register page-->
    <Grid x:Name="ContentPanel" Grid.Row="1" Margin="24,0,24,0" VerticalAlignment="Top">
      <ScrollViewer x:Name="ContentScroller">
        <StackPanel x:Name="RegisterFormPanel">
          <TextBlock 
              Name="textCountry" Style="{StaticResource TangoTextBlockStyle}"
              Text="{Binding Localizedresources.country_code_title, Source={StaticResource LocalizedStrings}}" />
          <TextBox 
              x:Name="textBoxCountry"
              Margin="-10,0,0,0"
              Style="{StaticResource PageTextBoxStyle}"
              Tapped="textBoxCountry_Tapped" Width="472" />
          <!--Mobile Number Field-->
          <TextBlock 
              Name="textMobile" Text="{Binding Localizedresources.mobile_number_label, Source={StaticResource LocalizedStrings}}" Style="{StaticResource TangoTextBlockStyle}" Height="27" />
          <TextBox
              x:Name="textBoxMobile" InputScope="TelephoneNumber"
              Style="{StaticResource PageTextBoxStyle}" TextChanged="textBoxMobile_TextChanged"
              KeyDown="textBoxes_KeyDown"
              GotFocus="textBoxes_GotFocus" LostFocus="textBoxes_LostFocus" />
          <TextBlock 
            Name="textMobileHint" FontSize="16" Style="{StaticResource TangoTextBlockStyle}" Opacity="0.7"
            Text="{Binding Localizedresources.mobile_number_notice, Source={StaticResource LocalizedStrings}}"
            Height="Auto" TextTrimming="None" TextWrapping="Wrap" />
          
          <!--First Name Field-->
          <TextBlock 
            Text="{Binding Localizedresources.first_name_label, Source={StaticResource LocalizedStrings}}"
            Name="textFirstName" Margin="0,22,0,0" Style="{StaticResource TangoTextBlockStyle}" />
          <TextBox 
            x:Name="textBoxFirstName" Style="{StaticResource PageTextBoxStyle}"
            KeyDown="textBoxes_KeyDown"
            GotFocus="textBoxes_GotFocus" LostFocus="textBoxes_LostFocus" />
          <!--Last Name Field-->
          <TextBlock 
            Text="{Binding Localizedresources.last_name_label, Source={StaticResource LocalizedStrings}}"
            Name="textLastName" Margin="0,5,0,0" Style="{StaticResource TangoTextBlockStyle}" />
          <TextBox
            x:Name="textBoxLastName" Style="{StaticResource PageTextBoxStyle}"
            KeyDown="textBoxes_KeyDown"
            GotFocus="textBoxes_GotFocus" LostFocus="textBoxes_LostFocus" />
          <!--Email Field-->
          <TextBlock 
            Name="textEmail" Margin="0,5,0,0" Style="{StaticResource TangoTextBlockStyle}"
            Text="{Binding Localizedresources.email_label, Source={StaticResource LocalizedStrings}}" />
          <TextBox 
            x:Name="textBoxEmail" Style="{StaticResource PageTextBoxStyle}"
            InputScope="EmailSmtpAddress" TextChanged="textBoxEmail_TextChanged"
            KeyDown="textBoxes_KeyDown"
            GotFocus="textBoxes_GotFocus" LostFocus="textBoxes_LostFocus" />
          <TextBlock 
            Name="textProfileHint" FontSize="16" Style="{StaticResource TangoTextBlockStyle}" Opacity="0.7"
            Text="{Binding Localizedresources.text_profile, Source={StaticResource LocalizedStrings}}"
            Height="Auto" TextTrimming="None" TextWrapping="Wrap" />

          <!--Terms and Condition-->
          <TextBlock 
            Name="textTermsOfUse" FontSize="20" 
            Visibility="Visible"
            Margin="0,20,0,0" 
            Style="{StaticResource TangoTextBlockStyle}"
            Height="Auto" TextTrimming="None" TextWrapping="Wrap" Tapped="textTermsOfUse_Tapped">
            <TextBlock.Inlines>
              <Run x:Name="textBeforeMatched" Text="{Binding Localizedresources.terms_of_use, Source={StaticResource LocalizedStrings}}" />
              <Run x:Name="textAfterMatched" Text="Terms of Use." TextDecorations="Underline" FontWeight="Bold" />
            </TextBlock.Inlines>
          </TextBlock>

          <!--Save Contact Switch Field-->
          <Grid x:Name="saveSwitchGrid" Margin="0,0,0,20">
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ToggleSwitch
              Grid.Row="0"
              Header="{Binding Localizedresources.save_contact_title, Source={StaticResource LocalizedStrings}}"
              Name="switchSaveContact" Margin="-12,18,0,-15"
              Width="477" IsOn="True" FontSize="28"
              Height="109" >
              <ToggleSwitch.HeaderTemplate>
                <DataTemplate>
                  <ContentControl Foreground="{StaticResource TangoForeground}" Content="{Binding}" Opacity="0.7" />
                </DataTemplate>
              </ToggleSwitch.HeaderTemplate>
            </ToggleSwitch>
            <TextBlock
              Grid.Row="1" Margin="0,-12,0,0"
              Name="textSaveContactPrompt" 
              FontSize="16" Style="{StaticResource TangoTextBlockStyle}" Opacity="0.7"
              Text="{Binding Localizedresources.save_contact_prompt, Source={StaticResource LocalizedStrings}}"
              Height="Auto" TextTrimming="None" TextWrapping="Wrap"/>
          </Grid>

          <!--ProgressBar Field-->
          <ProgressBar Name="waitingBar" Margin="0,-20,0,0" Height="6" Width="432"
                       Visibility="Collapsed" />
        </StackPanel>
      </ScrollViewer>
    </Grid>
  </Grid>
</app:TangoEventPageBase>
