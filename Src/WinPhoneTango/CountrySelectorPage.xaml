<app:TangoEventPageBase
  x:Class="WinPhoneTango.CountrySelectorPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:app="clr-namespace:WinPhoneTango"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  FontFamily="{StaticResource TangoFontFamilyNormal}"
  Foreground="{StaticResource TangoForeground}"
  SupportedOrientations="Portrait" Orientation="Portrait"
  mc:Ignorable="d" d:DesignHeight="800" d:DesignWidth="480">

  <app:TangoEventPageBase.Resources>
    <DataTemplate x:Key="listItemTemplate">
      <Grid x:Name="listItem" Height="42">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="78" />
          <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" HorizontalAlignment="Right" Margin="0,0,0,0"
                   FontSize="28">
          <TextBlock.Inlines>
            <Run Text="+" />
            <Run Text="{Binding Path=Countrycodenumber}" />
          </TextBlock.Inlines>
        </TextBlock>
        <TextBlock Grid.Column="1" Text="{Binding Path=Countryname}" FontSize="28"
                   HorizontalAlignment="Left" Margin="12,0,0,0" />
      </Grid>
    </DataTemplate>
  </app:TangoEventPageBase.Resources>

  <!--LayoutRoot is the root grid where all page content is placed-->
  <Grid x:Name="LayoutRoot">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!--TitlePanel contains the name of the application and page title-->
    <StackPanel x:Name="TitlePanel" Grid.Row="0" Margin="0,0,0,0">
      <TextBlock x:Name="PageTitle" Style="{StaticResource TangoTitleStyle}"
                 Text="{Binding Localizedresources.country_code_title, Source={StaticResource LocalizedStrings}}" />
    </StackPanel>

    <!--ContentPanel - place additional content here-->
    <Grid x:Name="ContentPanel" Grid.Row="1" Margin="12,0,12,0">
      <ListBox Height="720" HorizontalAlignment="Center" Name="countryListBox"
               VerticalAlignment="Top" Width="456"
               ItemTemplate="{StaticResource listItemTemplate}"
               SelectionChanged="countryListBox_SelectionChanged"
               ItemContainerStyle="{StaticResource TangoAccentColorItemStyle}">
      </ListBox>
    </Grid>
    <ProgressBar Grid.Row="1" Height="8" HorizontalAlignment="Left"
                 Margin="12,0,0,0" Name="waitingBar"
                 VerticalAlignment="Center" Width="454"
                 IsIndeterminate="True" />
  </Grid>
</app:TangoEventPageBase>
