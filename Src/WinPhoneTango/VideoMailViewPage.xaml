<app:TangoEventPageBase
  x:Class="WinPhoneTango.VideoMailViewPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:app="clr-namespace:WinPhoneTango"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  FontFamily="{StaticResource TangoFontFamilyNormal}"
  Foreground="{StaticResource TangoForeground}"
  SupportedOrientations="Portrait" Orientation="Portrait"
  mc:Ignorable="d" d:DesignHeight="800" d:DesignWidth="480">

  <!--LayoutRoot is the root grid where all page content is placed-->
  <Grid x:Name="LayoutRoot">
    <!--ContentPanel - place additional content here-->
    <Grid x:Name="ContentPanel" Grid.Row="0" Margin="-0,0,0,0">
      <Image Width="480" Height="768" Stretch="Fill"
             Source="ms-appx:///WinPhoneTango/Resources/avatar.png" />
      <Border Width="480" Height="120"
              VerticalAlignment="Bottom"
              Background="Gray" Opacity="0.5">
        <StackPanel>
          <TextBlock Margin="18" FontSize="28" Name="textCallUserName">Unknown</TextBlock>
          <StackPanel Margin="12,0,12,0"  Orientation="Horizontal">
            <TextBlock Text="00:00:00" Name="textPlayedTime" VerticalAlignment="Center" />
            <TextBlock Text="/00:01:30" VerticalAlignment="Center" />
            <Border Name="borderProgressBar"
                    Width="290" Height="18" Margin="12"
                    BorderThickness="0" Background="White">
              <Rectangle Name="progressBar" HorizontalAlignment="Left" Width="0" Height="18" Fill="Red"></Rectangle>
            </Border>
          </StackPanel>
        </StackPanel>
      </Border>
    </Grid>
  </Grid>
</app:TangoEventPageBase>
